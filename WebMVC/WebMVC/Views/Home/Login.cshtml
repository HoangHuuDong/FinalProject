@model WebMVC.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div style="margin-left:100px;" class="card">
                <div style="font-size:40px;" class="card-header">
                    Login
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
                        </div>
                        <div style="margin-left:30px" class="form-group">
                            <input style="color:#4e93ca" type="submit" name="submit" class="btn" value="Login" />
                            <button style="margin-left: 80px" type="button" class="btn">
                                @Html.ActionLink("Register", "Register", "Home")
                            </button>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>